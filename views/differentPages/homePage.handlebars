          {{#each articles}}
          <div class="card" data-value={{this.keyword}}>
            <label class="card-header blue_content_topic">Topic : {{this.keyword}}</label>
            <div class="card-body">
              <a href="{{this.link}}" target="_blank" class="blue_content">{{this.title}}</a>
