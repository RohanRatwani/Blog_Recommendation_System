<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="/public/css/home.css">
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script>
    $(document).ready(function () {
      var interestss = $('#int_length').text();
      if (interestss < '1') {
        $('#exampleModalCenter').modal("show");
      }
      // Hide the Modal
      $("#modalSave").click(function () {
        $("#exampleModalCenter").modal("hide");
      });
    });
  </script>
</head>

<body id="body-home">

  <nav id="nav-bar-home" class="navbar navbar-expand-lg navbar-light navbar-bgg">
    <a class="navbar-brand" href="http://localhost:3000/" style="color: white;">LOGO</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#" style="color: white;">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/home/userprofile" style="color: white;">User Profile</a>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Enter Keyword" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Filter Articles</button>
      </form>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-3">
        <div class="sidebar">
          <header>Topics</header>
          <ul>
            <li><a href="#"> World</a></li>
            <li><a href="#"> U.S.</a></li>
            <li><a href="#"> Politics</a></li>
            <li><a href="#"> Business</a></li>
            <li><a href="#"> Technology</a></li>
            <li><a href="#"> Science</a></li>
            <li><a href="#"> Health</a></li>
            <li><a href="#"> Sports</a></li>
            <li><a href="#"> Books</a></li>
            <li><a href="#"> Style</a></li>
            <li><a href="/logout"> Logout</a></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="card">
          <h5 class="card-header">Featured Articles Based on Your Interests:</h5>
         
        </div>
        
        {{#if articles}}
            {{!-- <ul class="text-danger"> --}}
              {{#each articles}}
                  <div class="card">
                    <h5 class="card-header">Featured</h5>
                    <div class="card-body">
                      <a href="{{this.link}}" target="_blank"><h5 class="card-title">{{this.title}}</h5></a>
                      <p class="card-text">{{{this.content}}}</p>
                      <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                    <div class="row" style="height: 5px;"></div>
                  </div>
                {{/each}}
              {{/if}}
        {{!-- <div class="card">
          <h5 class="card-header">Featured</h5>
          <div class="card-body">
            <h5 class="card-title">TITLE IS HERE</h5>
            <p class="card-text">MAYBE URL IS HERE BECOZ URL IS LONG.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div> --}}
      </div>
      <div class="col-lg-3">
        <p> I am col-lg-3 right</p>
        <p id="int_length">{{interests_length}}</p>
      </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="modalSave">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>

</html>